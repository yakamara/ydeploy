{
    "name": "yakamara/ydeploy",

    "require": {
        "php": ">=8.1"
    },

    "require-dev": {
        "deployer/deployer": "^6.9",
        "friendsofphp/php-cs-fixer": "^3.34.0",
        "friendsofredaxo/linter": "^1.4",
        "redaxo/php-cs-fixer-config": "^2.2.0",
        "redaxo/psalm-plugin": "^2.0",
        "redaxo/source": "^5.14.3",
        "vimeo/psalm": "^5.15"
    },

    "autoload": {
        "classmap": [
            "lib/"
        ],
        "files": [
            "deployer/functions.php"
        ]
    },

    "scripts": {
        "cs": "php-cs-fixer fix -v --ansi",
        "psalm": "psalm --no-suggestions"
    },

    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.1.17"
        }
    }
}

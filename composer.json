{
    "name": "yakamara/ydeploy",

    "require": {
        "php": ">=8.1"
    },

    "require-dev": {
        "deployer/deployer": "^7.3.1",
        "redaxo/php-cs-fixer-config": "^2.10.0"
    },

    "autoload": {
        "classmap": [
            "lib/"
        ],
        "files": [
            "deployer/functions.php"
        ]
    },

    "scripts": {
        "cs": "php-cs-fixer fix -v --ansi"
    },

    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.1.17"
        }
    }
}
